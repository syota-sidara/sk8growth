<div class="admins-clipindex-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="d-flex justify-content-center">
					<h1>Clip List</h1>
				</div>
			</div>
		</div>
         <div class="row-all col-12">
			<% @clips.each do |f| %>
				<div class="clipsplate" style="border: 4px solid white; box-shadow: 0 0 5px gray; margin-top: 50px">
					<%= link_to admins_clip_path (f) do %>
						<p style="margin-bottom: 0px; padding-top: 10px; font-weight: bold;"><%= f.title %></p>
						<iframe width="300" height="200" src="https://www.youtube.com/embed/<%=f.video%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					<% end %>
					<%= link_to "ç·¨é›†", edit_admins_clip_path(f.id), class: "clip-edit" %>
			    </div>
		    <% end %>
         </div>
	</div>
</div>

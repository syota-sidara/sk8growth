<div class="form-wrapper">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2 class="form">新規登録</h2>
  <form>
    <div class="form-item">
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
    </div>
    <div class="form-item">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email" %>
    </div>
    <div class="form-item">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
    </div>
     <div class="form-item">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード再確認" %>
    </div>
    <div class="button-panel">
      <%= f.submit "登録", style: "background-color: yellow;" %>
    </div>
  </form>
  <div class="form-footer">
    <%= render "users/shared/links" %>
  </div>
<% end %>
</div>

<div class="signup-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-center">
            <h2>新規登録</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="d-flex justify-content-center">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group has-icon">
              <label class="control-label sr-only" for="inputName">Name</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
              <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
            </div>

            <div class="field">
              <label for="useremail" class="text-info">Email:</label><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
               <label for="userpassword" class="text-info">パスワード:</label><br>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <label for="userpassword" class="text-info">パスワード再確認:</label><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions" style="padding-top: 30px;">
              <%= f.submit "登録", style: "background-color: yellow;" %>
              <%= render "users/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

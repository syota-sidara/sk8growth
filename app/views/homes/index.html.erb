<div class="admin-homeindex-wrapper" style="margin-top: 100px;">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="d-flex justify-content-center">
					<h2><%= @home.title %></h2>
				</div>
			</div>		
		</div>
		<div class="row">
		    <div class="col-12">
		    	<div class="d-flex justify-content-center">
					<iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @clip.video %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				</div>
		    </div>
		</div>
		<div class="card text-center" style="margin-top: 100px;">
			<div class="card-header">
				<h2>今月の Trick Challenge</h2>
			</div>
			<div class="card-body">
				<h2 class="card-title">今月の Trick Challenge<br><%= @home.challenge %></h2>
				<p class="card-text">今すぐ投稿してみよう！！！</p>
				<%= link_to "投稿へ", new_clip_path, class: "btn btn-primary" %>
			</div>
		</div>
		<div class="row" style="margin-top: 100px;">
			<div class="col-12">
				<div class="d-flex justify-content-center">
					<h3>HOW TO</h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="d-flex justify-content-center">
					<iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @home.video %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				</div>
			</div>
		</div>
		<br>
		<br>
		<br>
		<br>
		<br>
		<br>
		<div class="row">
			<div class="col-12">
				<div class="d-flex justify-content-center">
					<h3>Favorites Ranking</h3>
				</div>
			</div>
		</div>
		<div class="row-all col-12">
			<% @all_ranks.each.with_index(1) do |rank,i| %>
				<div class="clipsplate" style="border: 4px solid white; box-shadow: 0 0 5px gray; margin-top: 50px">
					<h4 style="margin-bottom: 0; padding-top: 10px;padding-left: 10%;"><%= i %>位</h4>
					<%= link_to clip_path (rank) do %>
						<p style="margin-bottom: 0px; padding-top: 10px; font-weight: bold;"><%= rank.title %></p>
						<iframe width="300" height="200" src="https://www.youtube.com/embed/<%=rank.video%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					<div class="index-favorites">
						<i class="far fa-thumbs-up" aria-hidden="true" style="font-size: font-size: 20px;"></i>
						<%= rank.favorites.count %>
					</div>
					<% end %>
				</div>
			<% end %>
		</div>	
         <br>
         <br>
         <br>
         <br>
         <br>
         <br>		
		<div class="row" style="margin-top: 10px;">
			<div class="col-12">
				<div class="d-flex justify-content-center">
					<h2>TREND</h2>
				</div>
			</div>
		</div>
		<div class="row-all col-12">		
			<% @trends.each do |trend| %>
				<div class="clipsplate" style="border: 4px solid white; box-shadow: 0 0 5px gray; margin-top: 50px;">
					<%= link_to trend_path (trend) do %>
					    <iframe width="300" height="200" src="https://www.youtube.com/embed/<%=trend.video%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
						<p style="margin-bottom: 0px; padding-top: 10px; font-weight: bold;"><%= trend.title %></p>
						<p style="margin-bottom: 0px; padding-top: 10px; font-weight: bold;"><%= trend.comment %></p>
					<% end %>
			    </div>
		    <% end %>
		</div>	
	</div>
</div>




